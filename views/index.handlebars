<div class="grid-container">

<div class="header">
<img src="/assests/images/warhammer-40k-logo.png">

<h1>Wishlist</h1>

</div>
<div class="search">
<h2>Add a Model</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Model Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
      <label for="fa">Faction:</label>
      <input type="text" id="fa" name="faction">
  </div>

  <div class="form-group">
      <label for="rl">Role:</label>
      <input type="text" id="rl" name="role">
  </div>

  <div class="form-group">
    <label for="own">Own?</label><br>
    <input type="radio" name="own" value="1"> Yes<br>
    <input type="radio" name="own" value="0"> No
  </div>

  <button type="submit">Add Model</button>
</form>
</div>
<div class="left-list">
<h2>Models that I Own</h2>

<ul>
  {{#each figures}}
    {{#if own}}
      <p>{{id}}. {{figure_name}}</p>
    {{/if}}
  {{/each}}
</ul>
</div>
<div class="right-list">
<h2>Models that I Want</h2>

<ul>
  {{#each figures}}
    {{#unless own}}
      <span><p>{{id}}. {{figure_name}}</p>
      <button class="change-own" data-id="{{id}}" data-own="{{own}}" data-newfigure=true>I own this</button></span>
    {{/unless}}
  {{/each}}
</ul>
</div>
</div>